pipeline {
    agent {
        docker { 
          image 'yatin03/amazonlinux:phpapache'
          args '-v $JENKINS_HOME/workspace/testproject2/Source:/var/www/html'
        }
    }
    stages {
        stage('Execute Script') {
            steps {
               sh 'cp -r update-scripts /var/www/html'
               sh 'cp -r src /var/www/html'
               sh 'cp -r pimcore /var/www/html'
               sh 'cp -r vendor /var/www/html'
               sh 'cp -r app /var/www/html'
               sh 'cp -r web /var/www/html'
               sh 'cp -r var /var/www/html'
               sh 'cp -r deployment /var/www/html'
               sh 'cp -r composer.json /var/www/html'
               sh 'cp -r bin /var/www/html' 
               sh 'cp -r .mage /var/www/html'
               sh 'ls -lahtr /var/www/html'
            }
        }
    }
}
