pipeline {
    agent {
        docker { 
          image 'yatin03/amazonlinux:phpapache'
          args '-v $JENKINS_HOME/workspace/testproject2/Source:/var/www/html'
        }
    }
    stages {
        stage('Execute Script') {
            steps {
               sh 'cp -r *.* /var/www/html' 
               sh 'ls -lahtr /var/www/html'
            }
        }
    }
}
