pipeline {
    agent {
        docker { 
          image 'yatin03/amazonlinux:phpapache2'
          args '-v $JENKINS_HOME/workspace/testproject2/Source:/var/www/html'
        }
    }
    stages {
        stage('Execute Script') {
            steps {
               sh 'mv update-scripts /var/www/html'
               sh 'mv src /var/www/html'
               sh 'mv pimcore /var/www/html'
               sh 'mv vendor /var/www/html'
               sh 'mv app /var/www/html'
               sh 'mv web /var/www/html'
               sh 'mv var /var/www/html'
               sh 'mv deployment /var/www/html'
               sh 'mv composer.json /var/www/html'
               sh 'mv bin /var/www/html' 
               sh 'mv .mage /var/www/html'
               sh 'ls -lahtr /var/www/html'
            }
        }
    }
}
